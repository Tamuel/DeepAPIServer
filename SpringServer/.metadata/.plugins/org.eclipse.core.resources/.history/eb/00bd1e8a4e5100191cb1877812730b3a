package com.ydk.detection.domain;

import javax.imageio.ImageIO;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import java.net.MalformedURLException;
import java.net.URL;

public class Image {
	private final int width;
	private final int height;
	private BufferedImage data;
	
	public Image(int width, int height) {
		this.width = width;
		this.height = height;
		BufferedImage I;
		try {
			I = ImageIO.read(new URL("https://tamuel.github.io/assets/images/markdown-img-paste-20190310235737776.png"));
			I.
			ImageIO.write(I, "png", new File("./down.png"));
		} catch (MalformedURLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	public int getHeight() {
		return height;
	}
	
	public int getWidth() {
		return width;
	}
}
